{
  "name": "shopping-list-api",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Bruno Sales Cardoso",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec ts-node src/server.ts",
    "tslint": "./node_modules/.bin/tslint --project ./",
    "test": "yarn tslint && nyc --reporter=text mocha -r ts-node/register src/**/*.spec.ts src/*.spec.ts",
    "coverage": "nyc report --reporter=text-lcov",
    "start": "node ./dist/server.js",
    "deploy": "yarn build",
    "prod": "yarn build && yarn start"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.6",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/sinon-express-mock": "^1.3.5",
    "@types/sinon-mongoose": "^1.3.7",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5",
    "sinon-mongoose": "^2.2.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "mongoose": "^5.2.9"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "src/server.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
