{
  "name": "shopping-list-api",
  "version": "1.0.0",
  "main": "server.js",
  "author": "Bruno Sales Cardoso",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "tslint": "./node_modules/.bin/tslint --project ./",
    "test": "yarn tslint && nyc mocha -r ts-node/register src/**/*.spec.ts src/*.spec.ts",
    "coverage": "yarn test | coveralls",
    "start": "node ./dist/server.js",
    "start:dev": "nodemon",
    "deploy": "yarn build",
    "prod": "yarn build && yarn start",
    "mongo": "docker run --name mongo -d -p 27017:27017 mongo:4-xenial"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.6",
    "@types/nconf": "^0.0.37",
    "@types/sinon": "^5.0.1",
    "@types/sinon-chai": "^3.2.0",
    "@types/sinon-express-mock": "^1.3.5",
    "@types/sinon-mongoose": "^1.3.7",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.3",
    "nyc": "^12.0.2",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "sinon": "^6.1.5",
    "sinon-chai": "^3.2.0",
    "sinon-express-mock": "^2.0.5",
    "sinon-mongoose": "^2.2.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "bcryptjs-then": "^1.0.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "mongoose": "^5.2.9",
    "nconf": "^0.10.0"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "src/server.ts"
    ],
    "reporter": [
      "text-lcov"
    ],
    "all": true
  },
  "nodemonConfig": {
    "verbose": true,
    "restartable": "rs",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "watch": [
      "src/"
    ],
    "exec": "ts-node src/server.ts",
    "ext": "ts"
  }
}
